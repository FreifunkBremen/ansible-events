#!/bin/env python3

from sys import path
path.append("lib")

import nodes

inv = nodes.Inventory(
        ##
        # default
        ##
        ipv6_subnet="fd00:42:100::/64",
        ##
        # to group_vars
        ##
        node_name_suffix="breminale",
